<h2><%= @n.name %></h2>
<span><%= @n.date %></span> -
<span><%= @n.author %></span>
<%# do not show edit functionality if viewing history of article %>
<% if !@viewingHistory %>
	<a href="/article/<%= @n.name %>/edit">Edit</a> | 
<% end %>
<a href="/history/<%= @n.name %>">History</a>
<form action="/archive" method="post">
	<input type="hidden" name="id" value="<%=@n.id%>">
	<input type="submit" value="Archive">
</form>	
<p>Word count: <%=@words %>, character count: <%= @characters %></p>
<section>
	<p class="article-body"><%= @n.body %><p>
</section>